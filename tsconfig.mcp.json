{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": ".next/mcp-servers",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "downlevelIteration": true,
    "noEmitOnError": false
  },
  "include": [
    "src/mcp/servers/*.ts",
    "src/mcp/types/*.ts",
    "src/mcp/config/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/mcp/**/*.test.ts",
    "src/lib/**/*",
    "src/app/**/*"
  ]
}